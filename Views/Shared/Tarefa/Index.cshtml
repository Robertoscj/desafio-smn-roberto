@model IEnumerable<dotnet_app_roberto.Models.Tarefa>

@{
    ViewData["Title"] = "Lista de Tarefas";
}

<h2>Lista de Tarefas</h2>
<a asp-action="Create" class="btn btn-primary">Nova Tarefa</a>
<table class="table">
    <thead>
        <tr>
            <th>Mensagem</th>
            <th>Data Limite</th>
            <th>Status</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Mensagem</td>
                <td>@item.DataLimite.ToShortDateString()</td>
                <td>@(item.Concluida ? "Concluída" : "Pendente")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>